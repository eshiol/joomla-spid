<extension version="3.0" type="plugin" group="user" method="upgrade">
	<name>plg_user_spid</name>
	<author>Helios Ciancio</author>
	<creationDate>January 2019</creationDate>
	<copyright>(C) 2017 - 2019 Helios Ciancio. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL v3</license>
	<authorEmail>info@eshiol.it</authorEmail>
	<authorUrl>www.eshiol.it</authorUrl>
	<version>3.8.6</version>
	<description>PLG_USER_SPID_XML_DESCRIPTION</description>
	<updateservers>
		<server type="extension" priority="2" name="User - SPiD">https://www.eshiol.it/files/spid/plg_user_spid.xml</server>
	</updateservers>
	<files>
		<filename plugin="spid">spid.php</filename>
		<folder>profiles</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_user_spid.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_user_spid.sys.ini</language>
		<language tag="it-IT">it-IT/it-IT.plg_user_spid.ini</language>
		<language tag="it-IT">it-IT/it-IT.plg_user_spid.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset
				name="advanced"
				>
				<field
					name="debug"
					type="radio"
					description="PLG_USER_SPID_DEBUG_SYSTEM_DESC"
					label="PLG_USER_SPID_DEBUG_SYSTEM_LABEL"
					class="btn-group btn-group-yesno"
					default="0"
					>
					<option
						value="0">JNO
					</option>
					<option
						value="1">JYES
					</option>
				</field>
				<field
					name="log"
					type="text"
					description="PLG_USER_SPID_DEBUG_FILENAME_DESC"
					label="PLG_USER_SPID_DEBUG_FILENAME_LABEL"
					default="eshiol.log.php"
					showon="debug:1"
					/>
				<field
					name="phpconsole"
					type="radio"
					description="PLG_USER_SPID_DEBUG_PHPCONSOLE_DESC"
					label="PLG_USER_SPID_DEBUG_PHPCONSOLE_LABEL"
					class="btn-group btn-group-yesno"
					default="0"
					>
					<option
						value="0">JNO
					</option>
					<option
						value="1">JYES
					</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
  