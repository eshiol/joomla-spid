<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="authentication" method="upgrade">
	<name>plg_authentication_spid</name>
	<author>Helios Ciancio</author>
	<creationDate>March 2018</creationDate>
	<copyright>(C) 2017, 2018 Helios Ciancio. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL v3</license>
	<authorEmail>info@eshiol.it</authorEmail>
	<authorUrl>www.eshiol.it</authorUrl>
	<version>3.8.5</version>
	<description>PLG_AUTHENTICATION_SPID_XML_DESCRIPTION</description>
	<updateservers>
		<server type="extension" priority="2" name="Authentication - SPiD">https://www.eshiol.it/files/spid/plg_authentication_spid.xml</server>
	</updateservers>
	<files>
		<filename plugin="spid">spid.php</filename>
		<filename>registration.php</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_authentication_spid.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_authentication_spid.sys.ini</language>
		<language tag="it-IT">it-IT/it-IT.plg_authentication_spid.ini</language>
		<language tag="it-IT">it-IT/it-IT.plg_authentication_spid.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset
				name="basic"
				>
				<field
					name="removeTINPrefix"
					type="radio"
					label="PLG_AUTHENTICATION_SPID_CONFIG_FIELD_REMOVEPREFIX_LABEL"
					description="PLG_AUTHENTICATION_SPID_CONFIG_FIELD_REMOVEPREFIX_DESC"
					class="btn-group btn-group-yesno"
					default="1"
					>
					<option
						value="0">JNO
					</option>
					<option
						value="1">JYES
					</option>
				</field>
				<field
					name="allowUserRegistration"
					type="list"
					description="PLG_AUTHENTICATION_SPID_CONFIG_FIELD_ALLOWREGISTRATION_DESC"
					label="PLG_AUTHENTICATION_SPID_CONFIG_FIELD_ALLOWREGISTRATION_LABEL"
					>
					<option
						value="">JGLOBAL_USE_GLOBAL
					</option>
					<option
						value="0">JNO
					</option>
					<option
						value="1">JYES
					</option>
				</field>
				<field
					name="allowEmailAuthentication"
					type="list"
					description="PLG_AUTHENTICATION_SPID_CONFIG_FIELD_ALLOWEMAILAUTHENTICATION_DESC"
					label="PLG_AUTHENTICATION_SPID_CONFIG_FIELD_ALLOWEMAILAUTHENTICATION_LABEL"
					default="0"
					>
					<option
						value="0">JNO
					</option>
					<option
						value="1">JYES
					</option>
					<option
						value="2">PLG_AUTHENTICATION_SPID_CONFIG_FIELD_ALLOWEMAILAUTHENTICATION_UPDATE
					</option>
				</field>
				<field
					name="minimumLoA"
					type="list"
					description="PLG_AUTHENTICATION_SPID_CONFIG_FIELD_MINIMUMLOA_DESC"
					label="PLG_AUTHENTICATION_SPID_CONFIG_FIELD_MINIMUMLOA_LABEL"
					default="SpidL1"
					>
					<option
						value="SpidL1">SpidL1
					</option>
					<option
						value="SpidL2">SpidL2
					</option>
					<option
						value="SpidL3">SpidL3
					</option>
				</field>
			</fieldset>
			<fieldset
				name="advanced"
				>
				<field
					name="debug"
					type="radio"
					description="PLG_AUTHENTICATION_SPID_DEBUG_SYSTEM_DESC"
					label="PLG_AUTHENTICATION_SPID_DEBUG_SYSTEM_LABEL"
					class="btn-group btn-group-yesno"
					default="0"
					>
					<option
						value="0">JNO
					</option>
					<option
						value="1">JYES
					</option>
				</field>
				<field
					name="log"
					type="text"
					description="PLG_AUTHENTICATION_SPID_DEBUG_FILENAME_DESC"
					label="PLG_AUTHENTICATION_SPID_DEBUG_FILENAME_LABEL"
					default="eshiol.log.php"
					showon="debug:1"
					/>
				<field
					name="phpconsole"
					type="radio"
					description="PLG_AUTHENTICATION_SPID_DEBUG_PHPCONSOLE_DESC"
					label="PLG_AUTHENTICATION_SPID_DEBUG_PHPCONSOLE_LABEL"
					class="btn-group btn-group-yesno"
					default="0"
					>
					<option
						value="0">JNO
					</option>
					<option
						value="1">JYES
					</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
